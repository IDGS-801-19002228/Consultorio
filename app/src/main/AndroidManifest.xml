            android:name="com.example.consultorio.activities.modificarCita"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name="com.example.consultorio.activities.agregarCita"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name="com.example.consultorio.activities.barraNavegacionInferior"
            android:background="@color/green_light"
            android:theme="@style/Theme.MyApplication" />
        <activity android:name="com.example.consultorio.activities.Registro" />
        <activity android:name="com.example.consultorio.activities.splash_activity" />

        <activity android:name="com.example.consultorio.activities.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
